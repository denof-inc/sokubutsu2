# データベース設定
DATABASE_TYPE=better-sqlite3
DATABASE_PATH=./sokubutsu.sqlite

# PostgreSQL設定（本番環境用）
# DATABASE_TYPE=postgres
# DATABASE_HOST=localhost
# DATABASE_PORT=5432
# DATABASE_USERNAME=sokubutsu_user
# DATABASE_PASSWORD=your_secure_password
# DATABASE_NAME=sokubutsu_db

# アプリケーション設定
NODE_ENV=development
PORT=3000

# Telegram Bot設定
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here
TELEGRAM_SECRET_TOKEN=your_secret_token_here

# ログ設定
LOG_LEVEL=debug

# セキュリティ設定
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=30

# スクレイピング設定
PLAYWRIGHT_HEADLESS=true
SCRAPING_TIMEOUT=30000
SCRAPING_RETRY_ATTEMPTS=3
SCRAPING_RETRY_DELAY=1000

# キャッシュ設定
CACHE_TTL=3600

# 通知設定
NOTIFICATION_CHECK_INTERVAL=300000
NOTIFICATION_BATCH_SIZE=10