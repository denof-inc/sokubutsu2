# データベース設定
DATABASE_TYPE=better-sqlite3
DATABASE_PATH=./sokubutsu.sqlite

# PostgreSQL設定（本番環境用）
# DATABASE_TYPE=postgres
# DATABASE_HOST=localhost
# DATABASE_PORT=5432
# DATABASE_USERNAME=sokubutsu_user
# DATABASE_PASSWORD=your_secure_password
# DATABASE_NAME=sokubutsu_db

