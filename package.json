{
  "name": "sokubutsu-mvp",
  "version": "1.0.0",
  "description": "新着物件通知サービス - MVP（完全リセット戦略準拠）",
  "type": "module",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start": "node dist/main.js",
    "start:dev": "node --import tsx --no-warnings src/main.ts",
    "start:dev:watch": "node --import tsx --watch --no-warnings src/main.ts",
    "start:multiuser": "MULTI_USER_MODE=true node --import tsx --no-warnings src/main.ts",
    "start:multiuser:dev": "MULTI_USER_MODE=true node --import tsx --watch --no-warnings src/main.ts",
    "test": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest --coverage",
    "test:ci": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest --ci --coverage --maxWorkers=2",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "lint": "eslint src/**/*.ts --fix",
    "lint:check": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "quality:check": "npm run lint:check && npm run typecheck && npm run test",
    "quality:fix": "npm run format && npm run lint",
    "precommit": "lint-staged",
    "manual:test": "node --import tsx --no-warnings src/manual-test.ts",
    "docker:build": "docker build -t sokubutsu-mvp .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "clean": "rm -rf dist coverage *.log",
    "prepare": "husky",
    "mcp:cipher": "node dist/mcp/cipher-mcp-server.js --stdio",
    "mcp:cipher:dev": "node --import tsx --no-warnings src/mcp/cipher-mcp-server.ts --stdio",
    "build:mcp": "tsc -p tsconfig.json",
    "mcp:cipher:run": "bash scripts/cipher-mcp.sh"
  },
  "dependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^5.0.3",
    "axios": "^1.6.0",
    "axios-cookiejar-support": "^4.0.7",
    "better-sqlite3": "^11.10.0",
    "cheerio": "^1.0.0-rc.12",
    "dotenv": "^17.2.1",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "grammy": "^1.38.1",
    "node-cron": "^3.0.3",
    "node-fetch": "^2.7.0",
    "puppeteer": "^24.16.0",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "puppeteer-real-browser": "^1.4.3",
    "telegraf": "^4.16.3",
    "tough-cookie": "^4.1.4",
    "typeorm": "^0.3.25",
    "vibelogger": "^0.1.0"
  },
  "devDependencies": {
    "@byterover/cipher": "^0.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "@types/node-cron": "^3.0.11",
    "@types/tough-cookie": "^4.0.5",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.0",
    "tsx": "^4.20.3",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=20.0.0 <21.0.0",
    "npm": ">=10.0.0"
  },
  "keywords": [
    "property",
    "monitoring",
    "telegram",
    "scraping",
    "mvp"
  ],
  "author": "Sokubutsu Team",
  "license": "MIT",
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/**/*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
